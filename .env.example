# Alpaca API Configuration (DO NOT COMMIT REAL KEYS)
APCA_API_KEY_ID=your_key_here
APCA_API_SECRET_KEY=your_secret_here
APCA_BASE_URL=https://paper-api.alpaca.markets
# Use https://api.alpaca.markets for live trading

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/alpaca_trader
REDIS_URL=redis://localhost:6379

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
API_TITLE=Alpaca Trading API
API_VERSION=1.0.0
CORS_ORIGINS=["http://localhost:3000"]
ADMIN_USERNAME=admin
ADMIN_PASSWORD=$2b$12$YourHashedPasswordHere

# Trading Engine Configuration
TRADING_MODE=paper
# Options: paper, live
ENGINE_ID=engine-001
HEARTBEAT_INTERVAL=30
DAILY_LOSS_LIMIT=1000.0
MAX_POSITION_SIZE=10000.0

# Logging Configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json

# External Services
WEBHOOK_URL=https://your-webhook-url.com/trading-alerts
NOTIFICATION_EMAIL=your-email@example.com

# Development Configuration
ENVIRONMENT=development
# Options: development, staging, production