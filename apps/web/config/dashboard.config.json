{
    "layout": {
        "theme": "dark",
        "grid": {
            "columns": 12,
            "gap": 4
        }
    },
    "widgets": [
        {
            "id": "account-overview",
            "type": "AccountOverview",
            "position": {"row": 0, "col": 0, "width": 4, "height": 1},
            "config": {
                "refreshInterval": 5000,
                "showSparklines": true
            }
        },
        {
            "id": "positions-table",
            "type": "PositionsTable",
            "position": {"row": 0, "col": 4, "width": 5, "height": 1},
            "config": {
                "refreshInterval": 5000,
                "maxRows": 10,
                "showPnL": true
            }
        },
        {
            "id": "order-entry",
            "type": "OrderEntry",
            "position": {"row": 0, "col": 9, "width": 3, "height": 1},
            "config": {
                "defaultOrderType": "limit",
                "quickButtons": [10, 50, 100, 500]
            }
        },
        {
            "id": "performance-chart",
            "type": "PerformanceChart",
            "position": {"row": 1, "col": 0, "width": 8, "height": 2},
            "config": {
                "defaultTimeframe": "1D",
                "showVolume": true,
                "indicators": ["MA20", "MA50"]
            }
        },
        {
            "id": "risk-monitor",
            "type": "RiskMonitor",
            "position": {"row": 1, "col": 8, "width": 4, "height": 1},
            "config": {
                "showAlerts": true,
                "alertThreshold": 0.5
            }
        },
        {
            "id": "strategy-control",
            "type": "StrategyControl",
            "position": {"row": 2, "col": 8, "width": 4, "height": 1},
            "config": {
                "allowHotReload": true,
                "showBacktest": true
            }
        },
        {
            "id": "metrics-dashboard",
            "type": "MetricsDashboard",
            "position": {"row": 3, "col": 0, "width": 6, "height": 1},
            "config": {
                "defaultTimeframe": "1h",
                "autoRefresh": true
            }
        },
        {
            "id": "alerts-panel",
            "type": "AlertsPanel",
            "position": {"row": 3, "col": 6, "width": 6, "height": 1},
            "config": {
                "showResolved": false,
                "maxAlerts": 10
            }
        }
    ],
    "dataSources": {
        "api": {
            "baseUrl": "http://localhost:8000",
            "websocket": "ws://localhost:8000/ws"
        },
        "polling": {
            "account": 5000,
            "positions": 5000,
            "orders": 2000,
            "market": 1000
        }
    }
}